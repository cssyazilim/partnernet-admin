RewriteEngine On
RewriteBase /partnernet-admin/

# 1) /api → Node backend proxy
RewriteRule ^api/(.*)$ http://34.44.194.247:3001/api/$1 [P,L]

# (Opsiyonel ama faydalı) CORS
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Headers "Authorization, Content-Type, X-Requested-With"
Header always set Access-Control-Allow-Methods "GET, POST, PATCH, PUT, DELETE, OPTIONS"

# 2) Var olan dosya/klasörü elleme
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3) Routing kuralların
RewriteRule ^$ index.php?p=dashboard [QSA,L]
RewriteRule ^login/?$ login.php [QSA,L]
RewriteRule ^mfa/?$   mfa.php   [QSA,L]
RewriteRule ^([^/]+)/?$ index.php?p=$1 [QSA,L]
