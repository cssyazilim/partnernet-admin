RewriteEngine On
RewriteBase /partnernet-admin/

# Gerçek dosya/klasör varsa dokunma (css/js/img/php)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# /partnernet-admin → index.php?p=dashboard
RewriteRule ^$ index.php?p=dashboard [QSA,L]

# login ve mfa gerçek dosya: doğrudan aç
RewriteRule ^login/?$ login.php [QSA,L]
RewriteRule ^mfa/?$   mfa.php   [QSA,L]

# /partnernet-admin/sayfa → index.php?p=sayfa
RewriteRule ^([^/]+)/?$ index.php?p=$1 [QSA,L]
